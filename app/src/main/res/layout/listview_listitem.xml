<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listitem_background">
        <ImageView
            android:id="@+id/listitem_checkedimage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginTop="2.5dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/listitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/BlueGray700"
                android:textSize="15sp"
                android:layout_margin="5dp" />
            <TextView
                android:id="@+id/listitem_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code"
                android:layout_below="@id/listitem_name"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/listitem_code"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/listitem_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_margin="5dp" />
                <ImageView
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:src="@drawable/turkish_lira_colored"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/listitem_photo"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/warning_icon_black"
            android:layout_margin="5dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>